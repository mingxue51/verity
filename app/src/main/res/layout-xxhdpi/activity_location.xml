<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:wheel="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.MapFragment"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                    <requestFocus/>
                </fragment>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Add more information"
                    android:textColor="#FFF"
                    android:textSize="17sp"/>

                <com.rengwuxian.Yanrialedittext.YanrialEditText
                    android:id="@+id/houseNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:hint="House number"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    app:met_errorColor="#ffcc0001"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#CCC"
                    app:met_textColor="#FFF"
                    app:met_textColorHint="#CCC"
                    app:met_underlineColor="#CCC"/>

                <com.rengwuxian.Yanrialedittext.YanrialEditText
                    android:id="@+id/street"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Street"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:met_errorColor="#ffcc0001"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#CCC"
                    app:met_textColor="#FFF"
                    app:met_textColorHint="#CCC"
                    app:met_underlineColor="#CCC"/>

                <com.rengwuxian.Yanrialedittext.YanrialEditText
                    android:id="@+id/unitApartment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Unit / Apartment"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:met_errorColor="#ffcc0001"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#CCC"
                    app:met_textColor="#FFF"
                    app:met_textColorHint="#CCC"
                    app:met_underlineColor="#CCC"/>

                <com.rengwuxian.Yanrialedittext.YanrialEditText
                    android:id="@+id/city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="City"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:met_errorColor="#ffcc0001"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#CCC"
                    app:met_textColor="#FFF"
                    app:met_textColorHint="#CCC"
                    app:met_underlineColor="#CCC"/>

                <com.rengwuxian.Yanrialedittext.YanrialEditText
                    android:id="@+id/state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="State"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:met_errorColor="#ffcc0001"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#CCC"
                    app:met_textColor="#FFF"
                    app:met_textColorHint="#CCC"
                    app:met_underlineColor="#CCC"/>

                <com.rengwuxian.Yanrialedittext.YanrialEditText
                    android:id="@+id/country"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Country"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    app:met_errorColor="#ffcc0001"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#CCC"
                    app:met_textColor="#FFF"
                    app:met_textColorHint="#CCC"
                    app:met_underlineColor="#CCC"/>

                <com.rengwuxian.Yanrialedittext.YanrialEditText
                    android:id="@+id/zip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Zip"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true"
                    app:met_errorColor="#ffcc0001"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#CCC"
                    app:met_textColor="#FFF"
                    app:met_textColorHint="#CCC"
                    app:met_underlineColor="#CCC"/>

                <com.rengwuxian.Yanrialedittext.YanrialEditText
                    android:id="@+id/notes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Notes"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    app:met_errorColor="#ffcc0001"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelTextColor="#CCC"
                    app:met_textColor="#FFF"
                    app:met_textColorHint="#CCC"
                    app:met_underlineColor="#CCC"/>

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.pnikosis.Yanrialishprogress.ProgressWheel
                android:id="@+id/progress_wheel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                wheel:matProg_barColor="#FFF"
                wheel:matProg_progressIndeterminate="true"/>

        </RelativeLayout>

    </ViewFlipper>
</LinearLayout>
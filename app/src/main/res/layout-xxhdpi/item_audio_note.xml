<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/play"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_marginRight="8dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play_icon_listen_audio"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transcription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Sorry! Speech is not recognized"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@id/transcription"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/microphone_icon_listen_audio"
                android:drawablePadding="6dp"
                android:text="10 Seconds"
                android:textColor="#CCC"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:drawableLeft="@drawable/clock_icon"
                android:drawablePadding="4dp"
                android:text="At 12:53:20 EST"
                android:textColor="#CCC"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:drawableLeft="@drawable/calendar_icon"
                android:drawablePadding="4dp"
                android:text="July 1, 2015"
                android:singleLine="true"
                android:textColor="#CCC"
                android:textSize="12sp"
                />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>